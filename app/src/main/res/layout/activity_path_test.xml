<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A2D41">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#335E76FF"
            android:elevation="10dp"
            android:gravity="center"
            android:minWidth="100dp"
            android:onClick="lowClick"
            android:padding="10dp"
            android:text="低"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="#995E76FF"
            android:elevation="10dp"
            android:gravity="center"
            android:minWidth="100dp"
            android:onClick="midClick"
            android:padding="10dp"
            android:text="中"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5E76FF"
            android:elevation="10dp"
            android:gravity="center"
            android:minWidth="100dp"
            android:onClick="hightClick"
            android:padding="10dp"
            android:text="高"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </LinearLayout>

<!--    <com.bullhead.androidequalizer.waveview.Wave33View-->
<!--        android:id="@+id/id_Wave33View"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="150dp"/>-->

    <com.musongzi.waveline.ui.WaveLineView
        android:id="@+id/id_lineview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true" />


</RelativeLayout>